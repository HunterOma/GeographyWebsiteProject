<script type="text/javascript">
  document.getElementById("submitguess").onclick = function () {
 var firstQuestion = prompt("What language is this from?");
switch (firstQuestion) {
    case "Inuit":
        confirm("Correct, this is Inuit.");
        break;
    default:
        confirm("Incorrect, this is Inuit.");
        break;
}
}
